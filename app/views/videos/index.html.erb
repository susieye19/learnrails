 <% @title="Ruby on Rails video tutorial library" %>

<div class="has-padding max-width">

  <div class="row">
    <div class="center">
      <h1>Browse our features library</h1>
      <h2>Customize your app with our step-by-step video tutorials that walk you through implementing popular web and design features<h2>
    </div>
  </div>

  <% @categories.each do |category| %>
    <div class="row">
      <h3><%= category %></h3>
    </div>

    <% Video.where(category: category).order("title ASC").each do |video| %>
      <div class="row">
        <div class="col-md-12">
          <%= link_to video_path(video), data: { no_turbolink: true } do %>
            <div class="thumbnail">
              <div class="feature-description">
                <h4><%= video.title %></h4>
                <p><%= video.description %></p>
              </div>
              <%= image_tag "https://dl.dropboxusercontent.com/s/294ywd70el4zciw/play_button_big.png", class: "play-icon" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="row">
    <h3>Coming Soon</h3>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to '#', data: { no_turbolink: true } do %>
        <div class="thumbnail">
          <div class="feature-description">
            <h4>Add a Twitter 'Follow' Button</h4>
            <p>Build your website's following by adding a 'Follow' button for Twitter.</p>
          </div>
          <%= image_tag "https://dl.dropboxusercontent.com/s/294ywd70el4zciw/play_button_big.png", class: "play-icon" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to '#', data: { no_turbolink: true } do %>
        <div class="thumbnail">
          <div class="feature-description">
            <h4>Switch Over from SQLite to PostgreSQL</h4>
            <p>Use the same database in both localhost and Heroku to minimize the issues you'll face during deployment.</p>
          </div>
          <%= image_tag "https://dl.dropboxusercontent.com/s/294ywd70el4zciw/play_button_big.png", class: "play-icon" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to '#', data: { no_turbolink: true } do %>
        <div class="thumbnail">
          <div class="feature-description">
            <h4>Integrate Google Maps into Your App</h4>
            <p>Use the Google Maps API to implement location-based features.</p>
          </div>
          <%= image_tag "https://dl.dropboxusercontent.com/s/294ywd70el4zciw/play_button_big.png", class: "play-icon" %>
        </div>
      <% end %>
    </div>
  </div>

  <% if current_user.try(:admin?) %>
    <%= link_to 'New Video', new_video_path %>
  <% end %>
</div>

<!-- Mixpanel event and identity tracking -->
<script>
  mixpanel.track("Index Videos");
</script>