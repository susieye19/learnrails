<div class="row">
  <div class="center">
    <h1>Browse our catalog of video tutorials</h2>
  </div>
</div>

<% @categories.each do |category| %>
  <div class="row">
    <div class="col-md-12">
      <h3><%= category %></h4>
    </div>
  </div>

  <% Video.where(category: category).each do |video| %>
    <div class="row">
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag "https://dl.dropboxusercontent.com/s/pfvdfdyrkt47rut/ebaybw.png" %>
        </div>
      </div>
      <div class="col-md-5">
        <h3><%= video.title %></h3>
      </div>
      <div class="col-md-3">
        <%= link_to "Show", video_path(video), class: "btn btn-primary" %>
        <%= link_to "Edit", edit_video_path(video), class: "btn btn-primary" %>
        <%= link_to "Destroy", video_path(video), method: :delete, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>

<%= link_to 'New Video', new_video_path %>
