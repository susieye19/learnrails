<div class="row">

  <div class="col-md-3">
    <%= render partial: "sidebar", locals: {chapters: @chapters} %>
  </div>

  <div class="col-md-9">

    <div class="center">
      <iframe class="tscplayer_inline embeddedObject" name="tsc_player" scrolling="no" frameborder="0" type="text/html" style="overflow:hidden;" src=<%= @chapter.url %> height="525" width="840" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </div>

    <h3><%= @chapter.title %></h3>

    <div class="panel panel-default">
      <div class="panel-body">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li class="active">
            <%= link_to "Notes", "#notes", :'data-toggle' => "tab" %>
          </li>
          <li><%= link_to "Transcript", "#transcript", :'data-toggle' => "tab" %></li>
          <li><%= link_to "Comments", "#comments", :'data-toggle' => "tab" %></li>
        </ul>

        <br>

        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane fade in active" id="notes">
            <div class="notes">
              <%= @chapter.notes.try(:html_safe) %>
            </div>
          </div>
          <div class="tab-pane fade" id="transcript">
            <div class="transcript">
              <%= @chapter.transcript.try(:html_safe) %>
            </div>
          </div>
          <div class="tab-pane fade" id="comments">
            Comments here
          </div>
        </div>
      </div>
    </div>

    <% if current_user.try(:admin?) %>
      <%= link_to 'Edit', edit_chapter_path(@chapter), class: "btn btn-link" %> |
      <%= link_to 'Back', chapters_path, class: "btn btn-link" %>
    <% end %>
  </div>
</div>
