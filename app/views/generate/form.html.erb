<div class="container">
  <h2>Generate an app!</h2>

  <%= form_tag "/thanks", method: :get do %>

    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <%= label_tag :q1, "What will your website be called?" %>
          <%= text_field_tag :q1, nil, autofocus: true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <%= label_tag :q2, "How many static pages do you need?" %>
          <%= number_field_tag "number", nil, in: 1...4, class: "input-group" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <%= label_tag :q3, "What is the name of each of your static pages?" %>
          <%= text_field_tag :q3, nil, autofocus: true, class: "form-control form-group" %>
          <%= text_field_tag :q1, nil, autofocus: true, class: "form-control form-group" %>
          <%= text_field_tag :q1, nil, autofocus: true, class: "form-control form-group" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <%= label_tag :q4, "Which one of your static pages will be your home-page?" %>
          <%= text_field_tag :q4, nil, autofocus: true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <%= submit_tag "Create my website", class: "btn btn-success" %>
        </div>
      </div>
    </div>

  <% end %>
</div>
